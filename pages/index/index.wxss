.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.input-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.input-row {
  display: flex;
  margin-bottom: 16rpx;
}

.todo-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.add-btn {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  margin-left: 20rpx;
  padding: 0;
  border-radius: 8rpx;
}

.add-btn::after {
  border: none;
}

/* 排序模式选择器样式 */
.sort-row {
  display: flex;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 16rpx;
}

.sort-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.sort-picker-value {
  padding: 10rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: bold;
  background: #07c160;
  color: #fff;
}

.selector-row {
  display: flex;
  justify-content: space-around;
  padding-top: 16rpx;
}

.selector-item {
  display: flex;
  align-items: center;
}

.selector-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.picker-value {
  padding: 10rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: bold;
}

/* 重要性级别颜色 */
.importance-A {
  background: #ff4d4f;
  color: #fff;
}

.importance-B {
  background: #faad14;
  color: #fff;
}

.importance-C {
  background: #1890ff;
  color: #fff;
}

.importance-D {
  background: #52c41a;
  color: #fff;
}

/* 紧急程度级别颜色 */
.urgency-1 {
  background: #52c41a;
  color: #fff;
}

.urgency-2 {
  background: #1890ff;
  color: #fff;
}

.urgency-3 {
  background: #faad14;
  color: #fff;
}

.urgency-4 {
  background: #ff4d4f;
  color: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}

.todo-item {
  display: flex;
  align-items: flex-start;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 16rpx;
}

.todo-left {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.todo-right {
  display: flex;
  align-items: center;
}

.tags-row {
  display: flex;
  margin: 10rpx 0 10rpx 0;
  flex-wrap: wrap;
}

.tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.importance-tag {
  font-weight: bold;
}

.urgency-tag {
  font-weight: bold;
}

.todo-text {
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 0;
}

.todo-text.completed {
  color: #999;
  text-decoration: line-through;
}

.completed {
  opacity: 0.6;
}

.delete-btn {
  color: #ff4d4f;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
}